<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.teamup.Registration2"
    android:orientation="vertical"
    android:background="#E0F2F1">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_organizer"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="7dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0F2F1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_organizer"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/organizer2"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_organizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ORGANIZER"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/seagreen"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textview_organizer_define"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Set Your Own League Here !" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_teamreg"
        app:cardCornerRadius="7dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:background="#E0F2F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_teamreg"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/teamreg"
                android:padding="6dp"/>

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_teamreg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PLAYER"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/seagreen"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textview_teamreg_define"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Get your game flourished !" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_guest"
        app:cardCornerRadius="7dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:background="#E0F2F1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_guest"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/guest" />

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_guest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAPTAIN"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/seagreen"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textview_guest_define"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Make your Team !" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
