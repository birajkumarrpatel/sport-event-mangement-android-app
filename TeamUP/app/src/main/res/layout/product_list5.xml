<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/teamnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Name :"
            android:padding="8dp"
            android:textColor="@color/seagreen"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/teamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CKP Cricket Team"
            android:layout_toRightOf="@+id/teamnametext"
            android:padding="8dp"
            android:textColor="@color/seagreen"
            android:textStyle="normal"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/captaintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captain Name :"
            android:layout_below="@+id/teamnametext"
            android:padding="8dp"
            android:textColor="@color/seagreen"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/captain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jay Shiroya"
            android:layout_below="@+id/teamnametext"
            android:layout_toRightOf="@+id/captaintext"
            android:padding="8dp"
            android:textColor="@color/seagreen"
            android:textStyle="normal"
            android:textSize="18dp"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>