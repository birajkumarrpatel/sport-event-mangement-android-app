<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="7dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_eventspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name :"
                android:padding="8dp"
                android:textColor="@color/seagreen"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eventSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CKP Cricket Team"
                android:layout_toRightOf="@+id/tv_eventspinner"
                android:padding="8dp"
                android:textColor="@color/seagreen"
                android:textStyle="normal"
                android:textSize="18dp"/>

            <TextView
            android:id="@+id/tv_WinningTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winning Team :"
            android:layout_below="@+id/tv_eventspinner"
            android:padding="8dp"
            android:textColor="@color/seagreen"
            android:textSize="18dp"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/winningTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jay Shiroya"
                android:layout_below="@+id/tv_eventspinner"
                android:layout_toRightOf="@+id/tv_WinningTeam"
                android:padding="8dp"
                android:textColor="@color/seagreen"
                android:textStyle="normal"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_RunnerUpTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runner's Up Team :"
                android:layout_below="@+id/tv_WinningTeam"
                android:padding="8dp"
                android:textColor="@color/seagreen"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/runnerUpTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jay Shiroya"
                android:layout_below="@+id/tv_WinningTeam"
                android:layout_toRightOf="@+id/tv_RunnerUpTeam"
                android:padding="8dp"
                android:textColor="@color/seagreen"
                android:textStyle="normal"
                android:textSize="18dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>