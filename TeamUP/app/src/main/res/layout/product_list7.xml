<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/teamname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCET"
        android:padding="8dp"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teamname1"
        android:text="vs"
        android:textColor="@color/seagreen"
        android:padding="8dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/teamname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/vs"
        android:text="CKP"
        android:textColor="@color/seagreen"
        android:padding="8dp"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/datetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:textColor="@color/seagreen"
        android:textSize="18dp"
        android:layout_below="@+id/teamname1"
        android:padding="8dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamname1"
        android:text="23-03-2018"
        android:layout_toRightOf="@+id/datetext"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:layout_toRightOf="@+id/date"
        android:layout_below="@id/teamname1"
        android:padding="8dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:20"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:padding="8dp"
        android:layout_below="@+id/teamname1"
        android:layout_toRightOf="@+id/timetext"/>
    <TextView
        android:id="@+id/venuetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue :"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:textStyle="bold"
        android:layout_below="@+id/datetext"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surat"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:layout_below="@+id/datetext"
        android:layout_toRightOf="@+id/venuetext"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/descritiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        android:textColor="@color/seagreen"
        android:layout_below="@+id/venuetext"
        android:padding="8dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Match"
        android:layout_below="@+id/venue"
        android:layout_toRightOf="@+id/descritiontext"
        android:textStyle="normal"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:padding="8dp"/>
    </RelativeLayout>
  </android.support.v7.widget.CardView>
    </RelativeLayout>