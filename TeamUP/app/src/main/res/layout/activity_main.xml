<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.teamup.MainActivity"
    android:background="#E0F2F1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/imglogo_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo4"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_logoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_logo"
                android:layout_centerHorizontal="true"
                android:paddingRight="22dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/logoname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TeamUP"
                    android:textSize="25dp"
                    android:textColor="@color/ll_1"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/logincard"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_marginTop="240dp"
                app:cardCornerRadius="7dp">



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:id="@+id/loginid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Login ID"
                        android:singleLine="true"
                        android:textColor="@color/seagreen"
                        android:textColorHint="#00695C"
                        android:padding="12dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="95dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp">

                    <EditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:visibility="visible"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColorHint="@color/seagreen"
                        android:textColor="#00695C"
                        android:padding="12dp" />
                </android.support.design.widget.TextInputLayout>



                <Button
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="155dp"
                    android:text="Login"
                    android:textColor="@color/seagreen"
                    android:background="#E0F2F1"
                    android:layout_gravity="center_horizontal"/>




                <TextView
                    android:id="@+id/forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:textSize="15dp"
                    android:layout_marginTop="225dp"
                    android:visibility="visible"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/ll_1"
                    android:clickable="true"/>



                <TextView
                    android:id="@+id/signuptext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not a Registered User? SIGN UP"
                    android:layout_marginTop="275dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:clickable="true"
                    android:visibility="visible"
                    android:textColor="@color/ll_1" />


            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
