<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.teamup.ForgotPassword3"
    android:background="#E0F2F1">

    <TextView
        android:id="@+id/resetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="25dp"
        android:textColor="@color/seagreen"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New Password"
        android:layout_below="@+id/resetpassword"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="12dp"
        android:textColor="#00695C"
        android:textColorHint="@color/seagreen"/>

    <EditText
        android:id="@+id/confirmnewpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Confirm New Password"
        android:layout_below="@+id/newpassword"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="12dp"
        android:textColor="#00695C"
        android:textColorHint="@color/seagreen"/>

    <Button
        android:id="@+id/passwordsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/confirmnewpassword"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:background="#4DB6AC"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="18dp"
        android:layout_below="@id/passwordsubmit"
        android:layout_centerHorizontal="true"
        android:textColor="@color/seagreen"
        android:layout_marginTop="20dp"
        android:clickable="true"/>



</RelativeLayout>
