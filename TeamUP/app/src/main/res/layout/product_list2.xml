<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="7dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/teamnametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Team Name :"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/seagreen"/>

    <TextView
        android:id="@+id/teamname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCET Cricket Club"
        android:padding="8dp"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:layout_toRightOf="@+id/teamnametext"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/captaintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Captain Name :"
        android:layout_below="@+id/teamnametext"
        android:padding="8dp"
        android:textColor="@color/seagreen"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/captain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jay Shiroya"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:padding="8dp"
        android:layout_below="@+id/teamnametext"
        android:layout_toRightOf="@+id/captaintext"/>

    <TextView
        android:id="@+id/eventtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name :"
        android:layout_below="@+id/captaintext"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:textSize="18dp"
        android:textColor="@color/seagreen"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/eventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CKP Cricket League"
        android:layout_below="@+id/captaintext"
        android:layout_toRightOf="@+id/eventtext"
        android:padding="8dp"
        android:textColor="@color/seagreen"
        android:textSize="18dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/eventname"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />


            <TextView
                android:id="@+id/approv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:padding="15dp"
                android:textColor="@color/seagreen"
                android:text="Pending"/>

            <Button
                android:id="@+id/takeaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="Take Action"
                android:textColor="@color/seagreen"
                android:background="#E0F2F1"
                android:textSize="12dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>
